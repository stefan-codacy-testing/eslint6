{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "requireConfigFile": false,
    "projects": ["./tsconfig.json"]
  },
  "rules": {
    "quotes": ["error", "single"],
    "no-console": "off",
    "semi": "off"
  }
}
